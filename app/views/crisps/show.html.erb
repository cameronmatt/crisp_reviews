<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2><%= @crisp.name %></h2>
            <h4>Average Rating</h4>
            <div class="average-review-rating" data-score=<%= @average_review  %>></div>
                <a>
                    <%= image_tag @crisp.crisp_img.url(:crisp_show), class: "crisp-show" %>
                </a>
            </div>
            <div>
                <% if user_signed_in? %>
                    <%= link_to "Add Review", new_crisp_review_path(@crisp) %>
                <% end %>
            </div>
        </div>

        <div class="col-md">
            <%= render @crisp.reviews %>
        </div> 
    </div> 
</div> 

<script>
$(document).ready(function() {
    $('.review-rating').raty({
        readOnly: true,
        score: function() {
            return $(this).attr('data-score');
        },
        path: '/assets/'
    });
});
</script>    

